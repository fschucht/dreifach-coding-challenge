{
  "name": "dreifach-coding-challenge",
  "type": "module",
  "version": "1.0.0",
  "engines": {
    "node": "=23.6.1"
  },
  "packageManager": "pnpm@10.0.0",
  "imports": {
    "#config/*.ts": "./src/config/*.ts",
    "#domain/*.ts": "./src/domain/*.ts",
    "#infra/*.ts": "./src/infra/*.ts",
    "#api/*.ts": "./src/api/*.ts"
  },
  "scripts": {
    "start:dev:api": "node --env-file .env --watch ./src/apps/api.ts",
    "start:dev:worker": "node --env-file .env --watch ./src/apps/worker.ts",
    "test": "node --test --experimental-test-module-mocks"
  },
  "dependencies": {
    "@azure/openai": "2.0.0",
    "@hono/node-server": "1.13.7",
    "@hono/zod-validator": "0.4.2",
    "bullmq": "5.35.1",
    "dedent": "1.5.3",
    "hono": "4.6.18",
    "hono-pino": "0.7.0",
    "ioredis": "5.4.2",
    "openai": "4.80.0",
    "pino": "9.6.0",
    "zod": "3.24.1",
    "zod-to-json-schema": "3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "22.10.9",
    "knip": "5.43.1",
    "pino-pretty": "13.0.0",
    "typescript": "5.7.3"
  }
}
